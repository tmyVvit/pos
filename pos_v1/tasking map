#1 formatBarcodeLists C
   input : tags
   output: barcodeLists[{
              barcode: string,
              count: number}]

#2 calculateBarcodeCountLists C
   input :barcodeLists
   output:barcodeCountLIsts[{
             barcode: string,  (unique)
             count:  number
                     }]

#3 buildCartItems C
   input : barcodeLists, allItems = loadAllItems()
   output: cartItems[{
              barcode : string,
              name    : string,
              count   : number,
              unit    : string,
              price   : number
           }]

#4 buildDiscountItems C
   input : cartItems, promotions = loadPromotions()
   output: discountItems[{
              barcode : string,
              discount: number
           }]

#5 calculateSubtotal C
   input : cartItems, discountItems
   output: cartItems[{
              barcode : string,
              name    : string,
              count   : number,
              unit    : string,
              price   : number,
              subTotal: number
            }]

#6 calculateTotalCost C
   input : cartItems
   output: totalCost: number

#7 calculateSaved C
   input : discountItems
   output: saved : number


#8 buildReceiptsString:
input: cartItems, totalCost, saved
output:receiptsString{
           receipts:[{
               name: string,
               count: string,
               unit : string,
               price: string,
               subTotal: string
           }],
           totalCost: string,
           saved : string
}
